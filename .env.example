FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=quizdb
MYSQL_USER=quizuser
MYSQL_PASSWORD=quizpassword

# Database URL (constructed from MySQL variables above)
DATABASE_URL=mysql+pymysql://quizuser:quizpassword@db:3306/quizdb

ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
ADMIN_DEFAULT_PASSWORD=changeme123

# Security: Comma-separated list of allowed hostnames (empty = allow all)
# Example: ALLOWED_HOSTS=BrainNotFound.example.com,localhost
ALLOWED_HOSTS=

# Session cookie security - set to 'true' only if you have HTTPS configured
# If you're using HTTP (not HTTPS), keep this as 'false' or login won't work!
SESSION_COOKIE_SECURE=false

# Email SMTP Configuration
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=noreply@example.com
MAIL_PASSWORD=your_smtp_password
MAIL_DEFAULT_SENDER=BrainNotFound <noreply@example.com>

# Encryption key for sensitive settings (FTP password, etc.)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# If not set, derived from SECRET_KEY
SETTINGS_ENCRYPTION_KEY=
